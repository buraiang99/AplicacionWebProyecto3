@model AplicacionWebProyecto3.Models.DoctorModel
@{
    ViewData["Title"] = "Registrar";
}

<form asp-action"RegistrarDoctor" method="post">
    <div class="row mx-4 mt-3">
        <div class="col-md-4">
            <label for="inputEmail4" class="form-label text-light">Cedula</label>
            <input type="text" class="form-control text-center" required id="doctorCedula" name="doctorCedula" placeholder="Cedula del doctor">
        </div>
        <div class="col-md-4">
            <label for="inputEmail4" class="form-label text-light">Contraseña</label>
            <input type="password" class="form-control text-center" required id="doctorPassword" name="doctorPassword" placeholder="Contraseña del doctor">
        </div>
        <div class="col-md-4">
            <label for="inputEmail4" class="form-label text-light">Codigo Doctor</label>
            <input type="text" class="form-control text-center" required id="doctorCodigo" name="doctorCodigo" placeholder="Codigo del doctor">
        </div>
    </div>
    <div class="row mx-4 mt-3">
        <div class="col-md-6">
            <label for="inputEmail4" class="form-label text-light">Nombre</label>
            <input type="text" class="form-control text-center" required id="doctorNombre" name="doctorNombre" placeholder="Nombre del doctor">
        </div>
        <div class="col-md-6">
            <label for="inputEmail4" class="form-label text-light">Apellidos</label>
            <input type="password" class="form-control text-center" required id="doctorApellidos" name="doctorApellidos" placeholder="Apellidos del doctor">
        </div>
    </div>
    <div class="col-12 w-auto mx-3 text-center my-3">
        <button type="submit" class="btn btn-primary text-center mt-3">Registrar</button>
    </div>
</form>