@model AplicacionWebProyecto3.Models.DoctorModel
@{
    ViewData["Title"] = "Registrar";
}

<form asp-action="Registrar" method="post">
    <div class="row mx-4 mt-3">
        <div class="col-md-4 text-center">
            <label for="inputEmail4" class="form-label">Cedula</label>
            <input asp-for="Cedula" type="text" class="form-control text-center" required id="Cedula" name="Cedula" placeholder="Cedula del doctor">
        </div>
        <div class="col-md-4 text-center">
            <label for="inputEmail4" class="form-label">Contraseña</label>
            <input asp-for="Pass" type="password" class="form-control text-center" required id="Pass" name="Pass" placeholder="Contraseña del doctor">
        </div>
        <div class="col-md-4 text-center">
            <label for="inputEmail4" class="form-label">Codigo Doctor</label>
            <input asp-for="CodigoMedico" type="text" class="form-control text-center" required id="CodigoMedico" name="CodigoMedico" placeholder="Codigo del doctor">
        </div>
    </div>
    <div class="row mx-4 mt-3">
        <div class="col-md-6 text-center">
            <label for="inputEmail4" class="form-label">Nombre</label>
            <input asp-for="Nombre" type="text" class="form-control text-center" required id="Nombre" name="Nombre" placeholder="Nombre del doctor">
        </div>
        <div class="col-md-6 text-center">
            <label for="inputEmail4" class="form-label">Apellidos</label>
            <input asp-for="Apellidos" type="text" class="form-control text-center" required id="Apellidos" name="Apellidos" placeholder="Apellidos del doctor">
        </div>
    </div>
    <div class="col-12 w-auto mx-3 text-center my-3">
        <button type="submit" class="btn btn-primary text-center mt-3">Registrar</button>
    </div>
</form>